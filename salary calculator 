import { useState } from "react";

export default function SalaryCalculator() { const [ctc, setCtc] = useState(0); const [inHand, setInHand] = useState(null); const [customDeductions, setCustomDeductions] = useState(0); const [bonus, setBonus] = useState(0); const [taxSlab, setTaxSlab] = useState(10); const [darkMode, setDarkMode] = useState(false);

const calculateSalary = () => { const monthlyCTC = ctc / 12; const basic = monthlyCTC * 0.4; const pf = basic * 0.12; const profTax = 200; const incomeTax = monthlyCTC * (taxSlab / 100);

const netSalary = monthlyCTC + (bonus / 12) - (pf + profTax + incomeTax + customDeductions);
setInHand(netSalary.toFixed(2));

};

return ( <div className={flex flex-col items-center justify-center min-h-screen p-6 transition-all duration-300 ${darkMode ? 'bg-gray-900 text-white' : 'bg-gray-100 text-black'}}> <div className="bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg w-full max-w-md transition-all duration-300"> <h2 className="text-2xl font-bold mb-6 text-center">CTC to In-Hand Salary Calculator</h2> <div className="space-y-4"> <input type="number" placeholder="Enter your CTC" className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value={ctc} onChange={(e) => setCtc(Number(e.target.value))} /> <input type="number" placeholder="Custom Deductions" className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value={customDeductions} onChange={(e) => setCustomDeductions(Number(e.target.value))} /> <input type="number" placeholder="Bonus Amount (Yearly)" className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value={bonus} onChange={(e) => setBonus(Number(e.target.value))} /> <select className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value={taxSlab} onChange={(e) => setTaxSlab(Number(e.target.value))} > <option value={5}>5% Tax Slab</option> <option value={10}>10% Tax Slab</option> <option value={20}>20% Tax Slab</option> <option value={30}>30% Tax Slab</option> </select> <button
onClick={calculateSalary}
className="w-full bg-blue-600 text-white p-3 rounded-lg font-semibold hover:bg-blue-700 transition-all"
> Calculate </button> </div> {inHand !== null && ( <div className="mt-6 p-4 bg-gray-200 dark:bg-gray-700 rounded-lg text-center"> <h3 className="text-lg font-semibold">Your In-Hand Monthly Salary:</h3> <p className="text-2xl font-bold text-green-600">â‚¹ {inHand}</p> </div> )} <button onClick={() => setDarkMode(!darkMode)} className="w-full mt-6 bg-gray-600 text-white p-3 rounded-lg font-semibold hover:bg-gray-700 transition-all" > Toggle {darkMode ? "Light" : "Dark"} Mode </button> </div> </div> ); }

